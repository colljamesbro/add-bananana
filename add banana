-- Example: Using a game-provided API to add bananas
local function addBananasSafely(amount)
    if game and game.AddResource then
        game.AddResource("bananas", amount) -- Replace with actual API function
        print("Added " .. amount .. " bananas safely!")
    else
        print("Error: Game API not available.")
    end
end

-- Trigger on key press
local function onKeyPress(key)
    if key == "0" then
        addBananasSafely(100000)
    end
end

-- Set up key listener
function setupKeyListener()
    print("Key listener active. Press 0 to add bananas safely.")
end

setupKeyListener()
