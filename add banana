-- Initial banana count
local currentBananas = 417616

-- Function to add bananas
local function addBananas(amount)
    currentBananas = currentBananas + amount
    print("Bananas added! You now have " .. currentBananas .. " bananas.")
end

-- Listen for key presses (single quote detection workaround)
local UserInputService = game:GetService("UserInputService")

UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.Unknown then
        if input.UserInputType == Enum.UserInputType.Keyboard and input.KeyCode == Enum.KeyCode.Unknown then
            local keyText = input.UserInputState == Enum.UserInputState.Begin and input.KeyCode.Name
            if keyText == "'" then -- Check if the key pressed is the single quote
                addBananas(100000) -- Add 100k bananas
            end
        end
    end
end)

print("Script running. Press ' (single quote) to add bananas. Starting bananas: " .. currentBananas)
